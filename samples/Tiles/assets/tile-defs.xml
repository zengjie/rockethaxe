<tiles label="Demo Tiles" width="32" height="32">

  <collisionTags>
    <land />
    <water />
    <deadly />
    <pit code="8" />
  </collisionTags>

  <!--
      There are separate blocks for frames and tiles so that they may
      be logically reorganized.  I.e., so the actual bitmap doesn't
      have to be manually rearranged to follow auto-tiling
      conventions, the tile -> frame mapping defined here does it.
  -->

  <frames>
    <grid label="land" x="0" y="0" columns="8" rows="8"  />
  </frames>

  <tiles>
    <tile label="land"      frame="land" collision="land" />
    <tile label="water"     frame="1"    collision="water" />
    <tile label="deepwater" frame="3"    collision="water,deadly" />
    <tile label="fire"      frame="2"    collision="4" />
    <tile label="pit"       frame="5"    collision="pit" />
  </tiles>
</tiles>
