<?xml version="1.0" encoding="utf-8"?>

<extension>
  <!-- Do not include trailing '/' in path! -->
  <assets path="assets" rename="assets" include="*" />

  <section if="flash">

    <section if="google">
      <source name="lib/google/analytics_flash/hxclasses/" />
      <haxeflag name="-swf-lib lib/google/analytics_flash/library.swf" />
    </section>

    <section if="mochi">
      <source name="lib/mochi/" />
      <haxeflag name="-swf-lib lib/mochi/mochi.swf" />
    </section>
  </section>


  <!-- This is here because simply including openfl as a dependency
       does not seem to bring in the associated libraries. -->Xb
  <haxelib name="openfl" />
  <haxelib name="actuate" />
</extension>
